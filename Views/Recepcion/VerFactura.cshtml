@model biblioteca_hotel.Clases.Factura

@{
    ViewData["Title"] = "Factura";
}

<h2>Factura #@Model.NumeroFactura</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Número de Factura</dt>
            <dd class="col-sm-9">@Model.NumeroFactura</dd>
            <dt class="col-sm-3">Fecha de Emisión</dt>
            <dd class="col-sm-9">@Model.FechaEmision.ToString("dd/MM/yyyy HH:mm")</dd>
            <dt class="col-sm-3">Cliente</dt>
            <dd class="col-sm-9">@Model.Cliente?.Nombre @Model.Cliente?.Apellido</dd>
            <dt class="col-sm-3">Reserva</dt>
            <dd class="col-sm-9">#@Model.Reserva?.Id</dd>
            <dt class="col-sm-3">Monto Total</dt>
            <dd class="col-sm-9"><strong>@Model.MontoTotal.ToString("C")</strong></dd>
            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Estado == "Pagada" ? "bg-success" : "bg-warning")">
                    @Model.Estado
                </span>
            </dd>
            <dt class="col-sm-3">Método de Pago</dt>
            <dd class="col-sm-9">@Model.MetodoPago</dd>
            @if (!string.IsNullOrEmpty(Model.Observaciones))
            {
                <dt class="col-sm-3">Observaciones</dt>
                <dd class="col-sm-9">@Model.Observaciones</dd>
            }
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Facturas" class="btn btn-secondary">Volver a Facturas</a>
    <a asp-action="Index" class="btn btn-primary">Volver a Recepción</a>
</div>

