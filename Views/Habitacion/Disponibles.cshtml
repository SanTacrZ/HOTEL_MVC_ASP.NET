@model IEnumerable<biblioteca_hotel.Clases.Habitacion>

@{
    ViewData["Title"] = "Habitaciones Disponibles";
}

<div class="page-header">
    <h2>Habitaciones Disponibles</h2>
    <p class="mb-0">Seleccione una habitaci칩n para ver m치s detalles</p>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card habitacion-card-disponible">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <span class="habitacion-tipo @item.Tipo.ToLower()">@item.Tipo</span>
                            <span class="badge bg-success">Disponible</span>
                        </div>
                        <h3 class="card-title">Habitaci칩n @item.Numero</h3>
                        <p class="text-muted">@item.Descripcion</p>
                        <div class="mb-3">
                            <strong>Capacidad:</strong> @item.Capacidad personas<br>
                            <strong>Precio:</strong> <span class="habitacion-precio">@item.PrecioPorNoche.ToString("C")</span> por noche
                        </div>
                        <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-primary w-100">
                            Ver Detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning">
        <h5>No hay habitaciones disponibles</h5>
        <p class="mb-0">Todas las habitaciones est치n ocupadas o reservadas en este momento.</p>
    </div>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Volver a Todas las Habitaciones</a>
</div>

<style>
    .habitacion-card-disponible {
        transition: all 0.3s ease;
        height: 100%;
    }

    .habitacion-card-disponible:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
</style>
