@model IEnumerable<biblioteca_hotel.Clases.Habitacion>

@{
    ViewData["Title"] = "Habitaciones Disponibles";
}

<div class="page-header">
    <h2>Habitaciones Disponibles</h2>
    <p class="mb-0">Seleccione una habitación para ver más detalles</p>
</div>

@if (!ViewBag.HayClientes)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Atención:</strong> No hay clientes registrados en el sistema. Debe agregar al menos un cliente antes de poder realizar reservas.
        <a asp-controller="Cliente" asp-action="Index" class="alert-link">Ir a Clientes</a>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card habitacion-card-disponible">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <span class="habitacion-tipo @item.Tipo.ToLower()">@item.Tipo</span>
                            <span class="badge bg-success">Disponible</span>
                        </div>
                        <h3 class="card-title">Habitación @item.Numero</h3>
                        <p class="text-muted">@item.Descripcion</p>
                        <div class="mb-3">
                            <strong>Capacidad:</strong> @item.Capacidad personas<br>
                            <strong>Precio:</strong> <span class="habitacion-precio">@item.PrecioPorNoche.ToString("C")</span> por noche
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-info flex-fill">
                                Ver Detalles
                            </a>
                            @if (ViewBag.HayClientes)
                            {
                                <a asp-action="ReservarHabitacion" asp-route-id="@item.Id" class="btn btn-primary flex-fill">
                                    Reservar
                                </a>
                            }
                            else
                            {
                                <button type="button" class="btn btn-secondary flex-fill" disabled title="No hay clientes registrados">
                                    Reservar
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning">
        <h5>No hay habitaciones disponibles</h5>
        <p class="mb-0">Todas las habitaciones están ocupadas o reservadas en este momento.</p>
    </div>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Volver a Todas las Habitaciones</a>
</div>

<style>
    .habitacion-card-disponible {
        transition: all 0.3s ease;
        height: 100%;
    }

    .habitacion-card-disponible:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
</style>
