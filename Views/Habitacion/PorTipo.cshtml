@model IEnumerable<biblioteca_hotel.Clases.Habitacion>

@{
    ViewData["Title"] = $"Habitaciones {ViewBag.Tipo}";
}

<h2>Habitaciones @ViewBag.Tipo</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Número</th>
            <th>Estado</th>
            <th>Precio por Noche</th>
            <th>Capacidad</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Numero</td>
                <td>
                    <span class="badge @(item.Estado == "Disponible" ? "bg-success" : item.Estado == "Ocupada" ? "bg-danger" : "bg-warning")">
                        @item.Estado
                    </span>
                </td>
                <td>@item.PrecioPorNoche.ToString("C")</td>
                <td>@item.Capacidad</td>
                <td>@item.Descripcion</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-info btn-sm">Ver Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Volver</a>

