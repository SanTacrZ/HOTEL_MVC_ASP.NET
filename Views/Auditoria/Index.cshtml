@model List<string>

@{
    ViewData["Title"] = "Auditoría";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2>
                <i class="bi bi-shield-check"></i> Auditoría del Sistema
            </h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-8">
            <div class="alert alert-info">
                <strong>Total de registros:</strong> @ViewBag.TotalRegistros |
                <strong>Mostrando:</strong> @ViewBag.CantidadMostrada últimos registros
            </div>
        </div>
        <div class="col-md-4 text-end">
            <form asp-action="Limpiar" method="post" onsubmit="return confirm('¿Está seguro de que desea limpiar todos los registros de auditoría?');">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Limpiar Registros
                </button>
            </form>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Registros de Auditoría</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th width="150">Fecha/Hora</th>
                                <th width="120">Tipo</th>
                                <th>Descripción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var registro in Model)
                            {
                                <tr>
                                    <td>
                                        <small>@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</small>
                                    </td>
                                    <td>
                                        @if (registro.Contains("ERROR"))
                                        {
                                            <span class="badge bg-danger">ERROR</span>
                                        }
                                        else if (registro.Contains("CHECK-IN"))
                                        {
                                            <span class="badge bg-success">CHECK-IN</span>
                                        }
                                        else if (registro.Contains("CHECK-OUT"))
                                        {
                                            <span class="badge bg-info">CHECK-OUT</span>
                                        }
                                        else if (registro.Contains("LOGIN"))
                                        {
                                            <span class="badge bg-primary">LOGIN</span>
                                        }
                                        else if (registro.Contains("CANCELACIÓN"))
                                        {
                                            <span class="badge bg-warning">CANCELACIÓN</span>
                                        }
                                        else if (registro.Contains("RESERVA"))
                                        {
                                            <span class="badge bg-info">RESERVA</span>
                                        }
                                        else if (registro.Contains("CONSUMO"))
                                        {
                                            <span class="badge bg-warning">CONSUMO</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">ACCIÓN</span>
                                        }
                                    </td>
                                    <td colspan="2">
                                        <small class="text-muted">@registro</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle"></i> No hay registros de auditoría disponibles.
                </div>
            }
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver al Inicio
            </a>
        </div>
    </div>
</div>

<style>
    .table {
        font-size: 0.9rem;
    }

    .badge {
        font-size: 0.8rem;
        padding: 0.35em 0.65em;
    }
</style>
